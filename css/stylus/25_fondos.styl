body
	background-color #D7CBCB
	font 16px Tahoma
	color #ffb0d5
h2
	background-color #944366
	padding 20px
section
	background-color rgba(255, 255, 255, 0.5)
	height 500px
	padding 20px
	
section div
	display inline-block
	height 400px
	margin-left 4px
	width 400px
	
.fondocolor .fondo1
	background-color #ff0
.fondocolor .fondo2
	background-color #ff0
.fondocolor .fondo3
	background-color #ff0
	
.imagenfondo .fondo1
	background-image url(../imgs/fondo1.jpg)
.imagenfondo .fondo2
	background-image url(../imgs/woodland.jpg)
.imagenfondo .fondo3
	background-image url(../imgs/fondo3.png)
	
.repetirfondo div
	background-color #fff
	background-image url(../imgs/fondo1.jpg)
	color #6f32ac
	width 200px
	margin-left 10px

.repetirfondo .fondo1
	background-repeat background-repeat
.repetirfondo .fondo2
	background-repeat no-repeat
.repetirfondo .fondo3
	background-repeat repeat-x
.repetirfondo .fondo4
	background-repeat repeat-y
	
.comportamientofondo div
	color #fff
	background-image url(../imgs/fondo1.jpg)
	overflow scroll
.comportamientofondo .fondo1
	background-attachment scroll
	
.posicionfondo
	height 1200px
	
.posicionfondo div
	background-image url(../imgs/leonidas.jpg)
	background-repeat no-repeat
	
.posicionfondo .fondo1
	background-position center left
.posicionfondo .fondo2
	background-position center center
.posicionfondo .fondo3
	background-position center right
.posicionfondo .fondo4
	background-position top left
.posicionfondo .fondo5
	background-position top center
.posicionfondo .fondo6
	background-position top right
.posicionfondo .fondo7
	background-position bottom left
.posicionfondo .fondo8
	background-position bottom center
.posicionfondo .fondo9
	background-position bottom right