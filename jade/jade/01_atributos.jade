doctype
html(lang="es")
  head
    meta(charset="UTF-8")
    title Atributos (jade)
    style(stylesheet).
      .verde { color: green; }
      .rojo { color: red; }
      .amarillo { background-color: yellow; }
      .centrar { text-align: center; }
      .negrita { font-weight: bold; }
      .rayado { text-decoration: line-through; }
      .fuente { font-family: Calibri; }
      .active { background-color: green; color: lime; }
  body
    h1 Atributos (jade)
    //Un solo atributo
    a(href='http://www.google.com') Ir a Google
    | &nbsp | &nbsp
    //Varios atributos
    a(href='http://www.co.yahoo.com', target='_blank', class='link') Ir a Yahoo
    //Variable
    - var color = true
    br
    br
    //Condicionar valores de los atributos
    div(class=color ? 'verde' : 'rojo' ) Color
    br
    br
    //Atributos en varias lineas
    input(
      type='number'
      min='10'
      max='99'
      placeholder='Ingrese'
    )
    br
    br
    //Atributos Booleanos 
    | Falso
    input(
      type='radio'
      name='bool'
      checked = 'false'
    )
    | Verdadero
    input(
      type='radio'
      name='bool'
      checked=true
    )
    br
    br
    //Atributo Style
    button(style={'background-color': 'crimson', color: 'white', border: 'none', padding: '10px'}) Boton
    // Atributo Class
    - var misclases = ['amarillo', 'centrar', 'negrita', 'rayado', 'fuente']
    h2(class=misclases) ADSI 1132816
    br
    br
    //Secci√≥n Actual
    - var actual = '/nosotros'
    nav
      li: a(class={active: actual === '/'} href='/') Inicio
      li: a(class={active: actual === '/nosotros'} href='/nosotros') Nosotros
      li: a(class={active: actual === '/servicios'} href='/servicios') Servicios
      li: a(class={active: actual === '/contacto'} href='/contacto') Contacto
    br 
    br
    //Clases e Identificadores Literales
    .amarillo Texto
    br
    .amarillo.centrar.rayado Texto
    br
    #cod1 Texto
    br
    #cod1.amarillo.centrar.rayado Texto
    br
    br
    // &attributes
    -var atributos = {'data-color': 'red'};
      div(classs="rojo")&attributes(atributos) Lorem Ipsum